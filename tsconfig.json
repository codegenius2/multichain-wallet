{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["DOM", "ES5"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "*": ["src/*", "node_modules/*"],
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest"],
    "esModuleInterop": true,
    "sourceMap": false
  },
  "include": ["src/**/*", "decs.d.ts"],
}